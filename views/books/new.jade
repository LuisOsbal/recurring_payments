extend ../layout

block body
	h1 Agregar libro
	form(action="/book", method="POST", style="margin-top: 2em;")
		.form-group
			.row
				.col-xs-4.col-md-2
					label(for="title") Titulo del libro
				.col-xs-8.col-md-10
					input(type="text", name="title", class="form-control" required=true)
		.form-group
			.row
				.col-xs-4.col-md-2
					label(for="description") Descripcion
				.col-xs-8.col-md-10
					textarea(id="description", name="description", class="form-control")
		.form-group
			.row
				.col-xs-4.col-md-2
					label(for="pages") Paginas del libro
				.col-xs-8.col-md-10
					input(type="number", id="pages", name="pages", class="form-control")
		.form-group
			.row
				.col-xs-4.col-md-2
					label(for="publishedAt") Fecha de publicacion
				.col-xs-8.col-md-10
					input(type="date", id="publishedAt", name="publishedAt", class="form-control")
		.form-group.text-right
			input(type="submit", class="btn btn-success", value="Guardar")
